{% extends 'base.html.twig' %}
{% block content %}
    <section class="lavage">
        <h2>Products</h2>
        {{ form_start(form) }}
        <ul class="products" data-prototype="{{ form_widget(form.products.vars.prototype)|e('html_attr') }}">

        </ul>

        {% if form.offsetExists('quantity') %}
            {{ form_row(form.quantity) }}
        {% endif %}

        <button type="submit">Commandez</button>
        {{ form_end(form) }}

    </section>

{% endblock %}